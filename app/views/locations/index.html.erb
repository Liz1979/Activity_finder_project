<% provide(:title, "Index") %>
<div class = form>
<p> <h1> Locations Index </h1> </p>
<table align = center border = 1>
<tr>
  <th>name</th>
  <th>country</th>
  <th>longitude</th>
  <th>latitude</th>
</tr>
  <% @locations.each do |location| %>
    <tr>
        <td><%= location.name %></br></br>
        <td><%= location.country %></br></br>
        <td><%= location.longitude %></br></br>
        <td><%= location.latitude %></td>
        <td><%= link_to 'Show', location %></td>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
        <td><%= link_to 'Delete', location, method: :delete, data: {confirm: "Are you sure?"} %></td>
    </tr>
  <% end %>
</table>
<div class = form>
<%= will_paginate @location %>
</div>
<p align = center><%= link_to 'Create new location', new_location_path %></p>
<p align = center><%= link_to 'Create new attraction', new_attraction_path %></p>
<p align = center><%= link_to 'New User', new_user_path %></p>
<p align = center><%= link_to 'Create new activity', new_activity_type_path %></p>
</div>